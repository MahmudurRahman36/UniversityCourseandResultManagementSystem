@using UniversityCourseandResultManagementSystem.Models

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    List<Department> departments = ViewBag.Departments;
    string message = ViewBag.Message;
}

<div class="form-group col-md-8 col-md-offset-2">
    <h1 style="text-align: center; color: paleturquoise; font-weight: bold; font-family: fantasy; margin-bottom: 20px;">Student Add</h1>

    <form method="POST" id="studentEntryForm">
        @if (ViewBag.Message != null)
        {
            if (@message == "1")
            {
                <h3 class='alert alert-danger'>The Student Email Already Exist</h3>
            }
            else if (@message == "3")
            {
                <h3 class='alert alert-danger'>Error While Entering data into database</h3>
            }
            else
            {
                <h3 class="alert alert-success">@ViewBag.Message</h3>
            }

        }
        <div>
            <label>Name</label>
            <input type="text" name="Name" class="form-control" />
        </div>
        <div>
            <label>Email</label>
            <input type="email" name="Email" class="form-control" />
        </div>
        <div>
            <label>Contact No.</label>
            <input type="text" name="ContactNo" class="form-control" />
        </div>
        <div>
            <label>Date</label>
            <input id="datePicker" type="date" name="Date" class="form-control" />
        </div>
        <div>
            <label>Address</label>
            <input type="text" name="Address" class="form-control" />
        </div>
        <div>
            <label>Department</label>
            <select name="Department" class="form-control">
                <option value="">--Department Name--</option>
                @if (departments != null)
                {
                    foreach (Department department in departments)
                    {
                        <option value="@department.Code">@department.Name</option>
                    }
                }
            </select>
        </div>
        <div class="col-md-3">
            <td><input type="submit" value="Register" style="margin-top: 20px;" class="form-control btn-success btn" /></td>
        </div>

    </form>

</div>
