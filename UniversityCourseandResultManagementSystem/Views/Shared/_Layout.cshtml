<script type="text/javascript">

        $(document)
            .ready(function () {

                $("#DepartmentID")
                    .change(function () {
                        $("#Teacher").empty();
                        var vdata = "";
                        $("#RemainingCredit").val(vdata);
                        $("#CreditToBeTaken").val(vdata);
                        $.ajax({
                            type: 'POST',
                            async: false,
                            url: '@Url.Action("GetTeacherDropdownList","CourseAssaignToTeacher")',
                            dataType: 'json',
                            data: { id: $("#DepartmentID").val() },
                            success: function (subcategories) {
                                $("#Teacher")
                                    .append('<option value="0">--Select--</option>');
                                $.each(subcategories,
                                    function (i, subcategory) {


                                        $("#Teacher")
                                            .append('<option value="' +
                                                subcategory.Value +
                                                '">' +
                                                subcategory.Text +
                                                '</option>');
                                    });
                            },
                            error: function (ex) {
                                alert('Failed to retrieve Teacher : ' + ex);
                            }
                        });
                        return false;
                    });

            });
</script>

